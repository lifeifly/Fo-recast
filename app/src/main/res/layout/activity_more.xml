<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/more_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/more_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="更多设置"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />

    <TextView
        android:id="@+id/more_content_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/more_bg"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="改变壁纸"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />

    <RadioGroup
        android:id="@+id/more_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/more_rb_green"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#C5EDD1"
            android:button="@null"
            android:gravity="center"
            android:text="青瓦白墙"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/more_rb_pink"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#FCAFAE"
            android:button="@null"
            android:gravity="center"
            android:text="粉装玉砌"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/more_rb_blue"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#87CEEB"
            android:button="@null"
            android:gravity="center"
            android:text="蓝色梦想"
            android:textStyle="bold"/>

    </RadioGroup>
    <TextView
        android:id="@+id/more_content_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/more_version"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="当前版本"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/more_content_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/more_cache"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="清除缓存"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/more_content_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/more_share"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="分享软件"
        android:textSize="25sp" />
</LinearLayout>